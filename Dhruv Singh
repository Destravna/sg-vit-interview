#include <iostream>
#include <string>
#include <algorithm>
#include <bits/stdc++.h>
using namespace std;

int reverseNum(int n){
    int res = 0;
    while(n > 0){
        int r = n % 10;
        res = (res * 10) + r;
        n  = n/10;
    }
    return res;
}

string reverseWord(string word){
    int l=0, r=word.size()-1;
    while(l <= r){
        swap(word[l], word[r]);
        l++;
        r--;
    }
    return word;

}


string reverseString(string s){
    string res = "";
    string curr = "";
    for(auto x:s){
        if(x == ' '){
            string temp = reverseWord(curr);
            res += temp + " ";
            curr = "";
        }
        else curr += x;
    }
    if(curr.size()){
        res += reverseWord(curr);
    }
    return res;
}

int main(){
    cout << reverseNum(123) << endl;
    cout << reverseString("Dhruv Singh") << endl;
    return 0;
}
